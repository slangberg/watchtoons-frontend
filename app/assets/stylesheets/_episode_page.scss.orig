.episode_page .page_title {
	margin-right: 310px;
}

.episode_info {
	font-size: 20px;
	font-weight: 700;
	margin: 10px 0px;
}

.edit_controls{
	display: none;
}

.episode_navagtion{
	position: absolute;
	top:20px;
	right:20px;

	.prev_button,
	.next_button{
		@include heading-font;
		@include inputgrad;
		@include border;
		display: inline-block;
		font-size: 16px;
		cursor: pointer;
		padding:10px 11px;
	}

	.prev_button{
		border-radius: 5px 0px 0px 5px;
		&:before{
			content:"r";
			font-family: $icon;
			position: relative;
			margin-right: 5px;
			font-size: 16px;
			top: 2px;
		}
	}
	.next_button{
		border-radius: 0px 5px 5px 0px;
		&:after{
			content:"j";
			font-family: $icon;
			position: relative;
			margin-left: 5px;
			font-size: 16px;
			top: 2px;
		}
	}
}

.episode_iframe{
	display: inline-block;
	border: 1px solid $border-grey;
	box-shadow:0px 0px 5px rgba(0,0,0,.75);
	display: none;
	z-index: 2;
	position: relative;
}

.episode_iframe.active{
	display: inline-block;
	height:390px;
	width:680px;
}


.episode_heading{
	margin-bottom: 20px;
}

.video_tab{
	display: inline-block;
	@include inputgrad;
	border: 1px solid $border-grey;
	@include heading-font;
	padding: 7px 10px;
	position: relative;
	font-size: 13px;
	margin-bottom: 7px;
}

#sub_tab{
	margin-left: -1px;
	border-radius: 0px 5px 5px 0px;
}

#dub_tab{
	border-radius: 5px 0px 0px 5px;
}

